qtconsole() {
    if ! command -v jupyter &>/dev/null; then
        conda activate
        jupyter qtconsole --JupyterWidget.gui_completion=droplist --JupyterWidget.buffer_size=-1
        conda deactivate
    else
        jupyter qtconsole --JupyterWidget.gui_completion=droplist --JupyterWidget.buffer_size=-1
    fi
}

adbwsetup() {
    adb shell setprop service.adb.tcp.port 4444
    adb tcpip 4444
}

rbinit() {
    if rbenv local; then
        echo "Activating rbenv"
        eval "$(rbenv init -)"
        local_rbver=$(rbenv local)
        echo "Adding ~/.gem/ruby/${local_rbver:0:3}.0/bin to PATH"
        export PATH="$HOME/.gem/ruby/${local_rbver:0:3}.0/bin:$PATH"
    fi
}

krypton() {
    if [ -f ~/.ssh/id_ed_krypton ]; then
        eval $(ssh-agent -s) >/dev/null
        ssh-add -K ~/.ssh/id_ed_krypton >/dev/null 2>&1
        ssh akshobg@krypton.local -i ~/.ssh/id_ed_krypton
    else
        echo "Krypton key not found"
    fi
}

